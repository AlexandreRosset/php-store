{% extends "::base.html.twig" %}

{% block title %}storeBundle:store:Detail{% endblock %}

{% block body %}
<div>
  <h2>{{produit.nom}}</h2>
  <p>
    prix:{{produit.prix}}€<br />
    quantité:{{produit.quantite}}
  </p>
  <div>
    {{produit.detail}}
  </div>
